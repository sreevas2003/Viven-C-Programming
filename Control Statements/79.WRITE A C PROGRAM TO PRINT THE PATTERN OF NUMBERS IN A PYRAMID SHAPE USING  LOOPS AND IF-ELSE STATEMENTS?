//diamond shape numbers
#include<stdio.h>
void main()
{
        int i,j;
        for(i=0;i<4;i++)
        {
                for(j=0;j<4-i;j++)
                        printf("  ");
                for(j=0;j<=i;j++)
                        printf("%d ",j+1);
                for(j=0;j<=i;j++)
                        printf("%d ",j+1);
                printf("\n");
        }
        for(i=0;i<4;i++)
        {
                for(j=0;j<=i;j++)
                        printf("  ");
                for(j=0;j<4-i;j++)
                        printf("%d ",j+1);
                for(j=0;j<=3-i;j++)
                        printf("%d ",j+1);
                printf("\n");
        }
}
