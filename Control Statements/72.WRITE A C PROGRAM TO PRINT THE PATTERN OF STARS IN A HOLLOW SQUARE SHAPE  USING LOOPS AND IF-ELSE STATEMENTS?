//hollow square shape
#include<stdio.h>
void main()
{
        int i,j;
        printf("Hollow Square Shape pattern : \n");
        for(i=0;i<4;i++)
        {
                for(j=0;j<4;j++)
                {
                        if(i==0 || i==3 || j==0 || j==3)
                                printf("* ");
                        else
                                printf("  ");
                }
                printf("\n");
        }
}
