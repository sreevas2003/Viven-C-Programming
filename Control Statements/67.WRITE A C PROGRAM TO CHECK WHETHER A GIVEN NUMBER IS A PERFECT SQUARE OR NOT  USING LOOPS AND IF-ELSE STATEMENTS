//perfect square
#include<stdio.h>
#include<math.h>
void main()
{
        int num;
        printf("Enter any Number : ");
        scanf("%d",&num);
        int n=sqrt(num);
        if(n*n==num)
                printf("%d is a perfect Number\n",num);
        else
                printf("%d is not perfect square\n",num);
}
