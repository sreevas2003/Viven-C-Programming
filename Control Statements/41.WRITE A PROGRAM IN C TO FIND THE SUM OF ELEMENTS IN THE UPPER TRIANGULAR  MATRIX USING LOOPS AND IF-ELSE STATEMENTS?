#include<stdio.h>
void main()
{
        int a[3][3]={1,4,7,2,5,8,3,6,9};
        int i,j,sum=0;
        for(i=0;i<3;i++)
        {
                for(j=0;j<=i;j++)
                        printf("  ");
                for(j=i;j<3;j++)
                {
                        printf("%d ",a[i][j]);
                        sum+=a[i][j];
                }
                printf("\n");
        }
        printf("Sum of Upper triangle is : %d\n",sum);
}
