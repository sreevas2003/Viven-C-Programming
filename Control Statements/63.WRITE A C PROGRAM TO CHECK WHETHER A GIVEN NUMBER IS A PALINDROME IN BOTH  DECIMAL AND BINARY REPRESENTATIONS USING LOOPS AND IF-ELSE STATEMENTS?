#include<stdio.h>
void main()
{
        int num;
        printf("Enter a Number : ");
        scanf("%d",&num);
        int rev=0,n=num;
        while(n)
        {
                rev=rev*10+(n%10);
                n/=10;
        }
        n=num;
        int bin=0,r,re=0,a=1;
        while(n)
        {
                r=n%2;
                re=re+a*r;
                a*=10;
                n/=2;
        }
        n=re;
        int br=0;
        while(n)
        {
                br=br*10+(n%10);
                n/=10;
        }
        if(num==rev && re==br)
                printf("Both palindrome\n");
        else
                printf("Both not palindrome\n");

}
