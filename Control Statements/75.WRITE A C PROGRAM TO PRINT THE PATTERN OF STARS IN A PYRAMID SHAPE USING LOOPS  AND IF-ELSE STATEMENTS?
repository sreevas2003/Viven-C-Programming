//pyramid shape
#include<stdio.h>
void main()
{
        int i,j;
        printf("Pyramid shape : \n");
        for(i=0;i<4;i++)
        {
                for(j=0;j<4-i;j++)
                        printf("  ");
                for(j=0;j<=i;j++)
                        printf("* ");
                for(j=0;j<i;j++)
                        printf("* ");
                printf("\n");
        }
}
