
#include<stdio.h>
void main()
{
        int a[10]={11,2,3,4,5,6,7,8,1,10};
        int i,j,psum=100,sum,d1,d2;
        for(i=0;i<10;i++)
        {
                for(j=i+1;j<10;j++)
                {
                        sum=a[i]+a[j];
                        if(sum<psum)
                        {
                                d1=a[i];
                                d2=a[j];
                                psum=sum;
                        }
                }
        }
        printf("%d and %d two elements min sum is : %d\n",d1,d2,psum);
}
