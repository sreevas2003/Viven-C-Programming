#include<stdio.h>
void main()
{
        int pos,i,a[8];
        printf("Enter array of 8 elements : ");
        for(i=0;i<8;i++)
                scanf("%d",&a[i]);
        printf("Enter delete index position : ");
        scanf("%d",&pos);
        for(i=pos;i<8;i++)
        {
                a[i]=a[i+1];
        }
        for(i=0;i<7;i++)
                printf("%d ",a[i]);
        printf("\n");
}
