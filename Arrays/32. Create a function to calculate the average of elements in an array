#include<stdio.h>
float avg(int *a,int);
void main()
{
        int i,j,a[10];
        printf("Enter array 10 elements : ");
        for(i=0;i<10;i++)
                scanf("%d",&a[i]);
        printf("Average of array elements is : %.2f\n",avg(a,10));
}
float avg(int *a,int s)
{
        int i;
        float sum=0;
        float average=0;
        for(i=0;i<s;i++)
                sum+=a[i];
        average=sum/s;
        return average;
}
