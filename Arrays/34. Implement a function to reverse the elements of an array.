#include<stdio.h>
void rev(int *a,int);
void main()
{
        int i,a[8]={1,2,3,4,5,6,7,8};
        rev(a,8);
        for(i=0;i<8;i++)
                printf("%d ",a[i]);
        printf("\n");

}
void rev(int *a,int s)
{
        int i,j,temp;
        for(i=0,j=s-1;i<j;i++,j--)
        {
                temp=a[i];
                a[i]=a[j];
                a[j]=temp;
        }
}
