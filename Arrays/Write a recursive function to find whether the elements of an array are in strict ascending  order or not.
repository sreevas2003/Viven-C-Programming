#include<stdio.h>
int ascending(int* a,int);
void main()
{
        int i,a[8];
        printf("Enter an array of 8 elements : ");
        for(i=0;i<8;i++)
                scanf("%d",&a[i]);
        if(ascending(a,0))
                printf("array is ascending order \n");
        else
                printf("Not ascending order\n");
}
int ascending(int *a,int i)
{
        if(i==8)
                return 1;
        if(a[0]<a[1])
                return ascending(a+1,i+1);
        else
                return 0;
}
