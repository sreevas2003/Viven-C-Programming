#include<stdio.h>
int sum(int *a,int);
void main()
{
        int i,a[8];
        printf("Enter array of 8 elements : ");
        for(i=0;i<8;i++)
                scanf("%d",&a[i]);
        printf("Sum of all even numbers in array is : %d\n",sum(a,0));
}
int sum(int *a,int i)
{
        int su=0;
        if(i==8)
                return su;
        if(*a%2==0)
        {
                su=*a;
                su=su+sum(a+1,i+1);
        }
        else
                su=su+sum(a+1,i+1);
        return su;
}
