#include<stdio.h>
void main()
{
        int rsum,csum,i,j,a[4][4];
        printf("Enter 4*4 matrix : ");
        for(i=0;i<4;i++)
        {
                for(j=0;j<4;j++)
                        scanf("%d",&a[i][j]);
        }
        int k=4,l=4;
        for(i=0;i<4;i++)
        {
                rsum=0;
                csum=0;
                for(j=0;j<4;j++)
                {
                        rsum+=a[i][j];
                        csum+=a[j][i];
                }
                a[i][k]=rsum;
                a[k][i]=csum;
        }
        for(i=0;i<5;i++)
        {
                for(j=0;j<5;j++)
                        printf("%d ",a[i][j]);
                printf("\n");
        }
}
