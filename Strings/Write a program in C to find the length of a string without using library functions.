#include<stdio.h>
int length(char*);
void main()
{
        char *name;
        printf("String is : ");
        gets(name);
        printf("length of string is : %d\n",length(name));
        printf("Size of the string is : %ld\n",sizeof(name));
}
int length(char *ch)
{
        int c=0;
        while(*ch!='\0')
        {
                ch++;
                c++;
        }
        return c;
}
